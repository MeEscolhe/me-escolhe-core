{
  "type": "object",
  "required": [
    "registration",
    "name",
    "email",
    "cra",
    "description",
    "skills",
    "experiences",
    "phases"
  ],
  "properties": {
    "registration": {
      "type": "number",
      "example": 116133454
    },

    "name": {
      "type": "string",
      "example": "Thomas"
    },

    "email": {
      "type": "string",
      "example": "thomas.lopes@ccc.ufcg.edu.br"
    },

    "cra": {
      "type": "number",
      "example": 8.5
    },

    "description": {
      "type": "string",
      "example": "Developer"
    },

    "skills": {
      "type": "object",
      "properties": {
        "hardSkills": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Java"
              },
              "level": {
                "type": "number",
                "example": 2,
                "enum": [0, 1, 2, 3, 4]
              }
            }
          }
        },
        "softSkills": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Trabalha bem em grupo"
              }
            }
          }
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Java"
              },
              "level": {
                "type": "number",
                "example": 2,
                "enum": [0, 1, 2]
              }
            }
          }
        }
      }
    },
    "experiences": {
      "type": "object",
      "properties": {
        "academicExperience": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "5f5d1fa6dccfa335d03fdd3e"
              },

              "title": {
                "type": "string",
                "example": "Developer"
              },

              "category": {
                "type": "string",
                "example": "Backend"
              },

              "institution": {
                "type": "string",
                "example": "UFCG"
              },

              "initialDate": {
                "type": "string",
                "pattern": "/([0-9]{4})-(?:[0-9]{2})-([0-9]{2})/",
                "example": "2018-08-22"
              },

              "finalDate": {
                "type": "string",
                "pattern": "/([0-9]{4})-(?:[0-9]{2})-([0-9]{2})/",
                "example": "2019-10-23"
              }
            }
          }
        },
        "workExperience": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "5f5d1fa6dccfa335d03fdd3e"
              },

              "role": {
                "type": "string",
                "example": "Developer"
              },

              "institution": {
                "type": "string",
                "example": "Microsoft"
              },

              "initialDate": {
                "type": "string",
                "pattern": "/([0-9]{4})-(?:[0-9]{2})-([0-9]{2})/",
                "example": "2018-08-22"
              },

              "finalDate": {
                "type": "string",
                "pattern": "/([0-9]{4})-(?:[0-9]{2})-([0-9]{2})/",
                "example": "2019-10-23"
              }
            }
          }
        }
      }
    },

    "phases": {
      "type": "array",
      "items": {
        "type": "string",
        "example": "7a65hg8755k73s21116789i8"
      }
    }
  }
}
