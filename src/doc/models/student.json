{
  "type": "object",
  "required": [
    "registration",
    "name",
    "email",
    "cra",
    "description",
    "skills",
    "experiences",
    "phases"
  ],
  "properties": {
    "registration": {
      "type": "number",
      "example": 116133454
    },

    "name": {
      "type": "string",
      "example": "Thomas"
    },

    "email": {
      "type": "string",
      "example": "thomas.lopes@ccc.ufcg.edu.br"
    },

    "password": {
      "type": "string",
      "example": "thomas.lopes123"
    },

    "cra": {
      "type": "number",
      "example": 8.5
    },

    "description": {
      "type": "string",
      "example": "Developer"
    },

    "skills": {
      "type": "array",
      "properties": {
        "hardSkills": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Java"
              },
              "level": {
                "type": "number",
                "example": 2,
                "enum": [0, 1, 2, 3, 4]
              }
            }
          }
        },
        "softSkills": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Trabalha bem em grupo"
              }
            }
          }
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Java"
              },
              "level": {
                "type": "number",
                "example": 2,
                "enum": [0, 1, 2]
              }
            }
          }
        }
      }
    },

    "experiences": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": ["5f28ac7082e88b35448255e8", "5f28ba7011e35b35448255e8"]
      }
    },

    "phases": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": ["7f78fr3111x97h53779000a1", "7a65hg8755k73s21116789i8"]
      }
    }
  }
}
